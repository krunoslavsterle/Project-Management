@model PM.Web.Administration.User.IndexUserViewModel
@{
    Layout = "~/Areas/Administration/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Users";
}

@Html.Partial("_LeftMenuBar", Guid.Empty)

@Html.Partial("_NewUserModal", new PM.Web.Administration.User.CreateUserViewModel())

<!-- PAGE -->
<div class="page">

    <div class="page-content-header">

        <span class="breadcrumbs">
            @Html.ActionLink("Home", "Index", "Dashboard", null, null) /
            <span>Users</span>
        </span>

        <div class="header-content-right">
            <button class="btn btn-sm btn-info" data-toggle="modal" data-target="#new-user-modal" data-backdrop="static">Add New</button>
        </div>
    </div>

    <div id="users-list" class="page-content">
        @Html.Partial("_UsersList", Model.Users)
    </div> 

</div>